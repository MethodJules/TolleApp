<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="179dp"
    tools:context=".MainBestFitActivity">


    <Button
        android:id="@+id/bestFitButton2"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/inDekoButton2"
        android:background="#69faebd7"
        android:text="BestFit"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_light" />

    <Button
        android:id="@+id/inDekoButton2"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:background="#69faebd7"
        android:text="InDeko"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_green_light" />

    <android.support.v4.view.ViewPager
        android:id="@+id/slideViewPagerBestFit"
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dotsLayoutBestFit"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>